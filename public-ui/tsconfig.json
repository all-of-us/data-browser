{
  "compileOnSave": false,
  "compilerOptions": {
      "baseUrl": "./",
      "outDir": "./dist/out-tsc",
      "sourceMap": true,
      "declaration": false,
      "allowSyntheticDefaultImports": true,
      "module": "es2020",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "target": "es2015",
      "jsx": "react",
      "typeRoots": [
          "node_modules/@types"
      ],
      "lib": [
          "es2018",
          "dom"
      ],
      "skipLibCheck": true,
      "resolveJsonModule": true
  }
}