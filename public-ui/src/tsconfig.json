{
  "compileOnSave": false,
  "compilerOptions": {
    "importHelpers": true,
    "jsx": "react-jsx",
    "module": "esnext",
    "baseUrl": "./src",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2016",
      "es2018.promise",
      "dom"
    ],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": ["./src/types", "./types"],
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "strict": false
  },
  "include": [
    "src"
  ]
}
