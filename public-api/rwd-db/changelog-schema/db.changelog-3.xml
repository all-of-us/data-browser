<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
  <changeSet author="srushtigangireddy" id="changelog-3">

    <createTable tableName="user_affiliations">
      <column name="id" type="BIGINT">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="institution_name" type="VARCHAR(500)">
        <constraints nullable="false"/>
      </column>
      <column name="role" type="VARCHAR(500)">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <createIndex
            indexName="idx_user_affiliations"
            tableName="user_affiliations"
            unique="true">
      <column name="id"/>
    </createIndex>

  </changeSet>
</databaseChangeLog>
