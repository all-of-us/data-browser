<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
  <changeSet author="srushtigangireddy" id="changelog-6">

    <createTable tableName="workspace_user_history">
      <column name="workspace_id" type="BIGINT">
        <constraints nullable="false"/>
      </column>
      <column name="user_id" type="BIGINT">
        <constraints nullable="false"/>
      </column>
      <column name="role" type="VARCHAR(10)">
        <constraints nullable="false"/>
      </column>
      <column name="removal_time" type="DATETIME">
        <constraints nullable="false"/>
      </column>
      <column name="workspace_history_version_id" type="INT(3)">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <createIndex
            indexName="idx_workspace_user"
            tableName="workspace_user_history"
            unique="true">
      <column name="workspace_id"/>
      <column name="user_id"/>
    </createIndex>

  </changeSet>
</databaseChangeLog>
